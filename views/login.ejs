<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parshuram Sangharsh Samiti Gomat</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
   <link rel="stylesheet" href="/css/login.css">
   <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
     *{
        font-family: 'Roboto', sans-serif;
     }
     .error{
    width: auto;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content:flex-end;
    background:red;
    position:absolute;
    top: 100px;
    right:0px;
    z-index: 5;
    border-radius:10px 0 0 10px ;
}
.error p ,#removeFlash{
    padding: 10px;
    cursor: pointer;
}
.info{
    width: auto;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content:flex-end;
    background:rgb(4, 141, 4);
    position:absolute;
    top: 100px;
    right:0px;
    z-index: 5;
    color: #fff;
    border-radius:10px 0 0 10px ;
}
.info p ,#removeFlash{
    padding: 10px;
    cursor: pointer;
}
  </style>
</head>
<body>
<div class="container-6">
    <% console.log(error) %>
    <% if(error == "" || error == null ){%>

        <%}else{%>
          <span class="error">
            <p><%=error%></p> <i id="removeFlash" class="bi bi-x-lg"></i>
          </span>
        <%}%>
        <% if(info == "" ||info == null){%>
            
           
          <% }else{%>
            <span class="info">
                <p><%= info%> </p> <i   id="removeFlash" class="bi bi-x-lg"></i>
              </span>
            
        <%} %>
    <div class="login">
     
        <form action="/login" method="post" id='login'>
            <h3>Login</h3>
            <input type="email" name="email" placeholder="Username" required />
            <input type="password" name="password" id="" placeholder="Password" required />
           <p> <button type="submit" name="login">Login</button> <span class='sign'> Register</span></p> 
            <p>Don't have an Account, Sign up!</p>
            
            <p id="forgetPass" style="color: blue;text-decoration: underline; cursor: pointer;">   
                <a href="/forget/password">Forget Password</a> </p>
        </form>
        <form action="/ragister" method="POST" id='signin'>
         <h3>Register Here</h3>
         <input type="text" name="name" id="name" placeholder="Name"required />
         <input type="email" name="email" id="email" placeholder="Email"required />
         <input type="password" name="password" id="" placeholder="Password"required />
         <button type="submit" >Register</button>
         <span style="padding: 8px 15px;" id='log' class='sign'> login</span>
         <p>Already have an account, log in</p>
       
            
            <p>You agreed with <a href="/hs/privecy-policy">Privacy Policy</a> by signing up</p>
     </form>
     <!-- <form action="/forgot/password" method="post" id='forgetForm'>
         <i id='hideForm' style="margin-left: 250px;cursor: pointer;" class='fa fa-times'></i>
         <label style="padding:5px;color: #fff; font-size: 18px" for="email">Plese enter your username , your username will be your email address</label> 
         <input type="email" name="username" id="" placeholder="Enter your email address" required>
         <button type="submit" >Send </button>
         <a style="margin-left:200px" href="/help">Get Help</a>
     </form> -->
    </div>
    
</div>
<script type="text/javascript">
     
        var login = document.querySelector('#login');
        var signin = document.querySelector('#signin');
        var btns = document.querySelector('.sign');
        var btnl = document.querySelector('#log');

       btns.addEventListener('click',()=>{
        login.style.display='none';
        signin.style.display='block';
        })
        btnl.addEventListener('click',()=>{
        login.style.display='block';
        signin.style.display='none';
        })
</script>
<script>
    const errorr = document.querySelector('.error')
    const info = document.querySelector('.info')
    const remove = document.getElementById('removeFlash')
    remove.addEventListener('click',()=>{    
        info.style.display = 'none'
    })
    remove.addEventListener('click',()=>{
        errorr.style.display = 'none'
    })
</script>
</body>
</html>